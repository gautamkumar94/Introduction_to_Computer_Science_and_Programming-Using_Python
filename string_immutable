# LOOP IN STRING

s = "abcdefgh"
for index in range(len(s)):
    if s[index]=='i' or s[index] == 'o':
        print("there is an i or u")
    print("string at doesnot contain i or u" )
    
for char in s:
    if char =='i'or char == 'u':
        print("there is an i or u")
        
        
        
